= render layout: 'checkout/layout' do
  .text-center.mb-40
    %h3.general-subtitle= t('checkout.complete.thankyou')
    %p.fw-300= t('checkout.complete.sent_to', email: presenter.email)
  .row.mb-20
    .col-sm-6
      .visible-xs
        %p.general-order-number.mb-0= presenter.order_number
        %p.general-address.mb-30= presenter.order_date
      %p.general-address= presenter.address
    .col-sm-6.hidden-xs.text-right
      %p.general-order-number.mb-0= presenter.order_number
      %p.general-address.mb-30= presenter.order_date

  = render partial: 'order_item/table', locals: { items: presenter.items }
  = render partial: 'orders/summary', locals: { order: presenter.order_summary }

